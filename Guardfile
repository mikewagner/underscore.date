# watch application coffeescript
guard 'coffeescript', :output => 'lib' do
  watch( '^src/(.*)\.coffee' )
end

# watch testing coffeescript
guard 'coffeescript', :output => 'spec/javascripts' do
  watch( '^spec/coffeescripts/(.*)\.coffee' )
end

